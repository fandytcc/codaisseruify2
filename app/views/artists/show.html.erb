<div class="row">
<!-- artist's photo -->
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <% @artist.photos.each do |photo| %>
        <%= image_tag photo.image.thumbnail %>
      <% end %>
    </div>
  </div>

<!-- Artist's main info -->
  <div class="col-md-6 col-md-4">
    <div class="caption">
      <h3><label for="first_name"> First Name: <%= @artist.first_name %></h3>
      <h4><label for="last_name"> Last Name: <%= @artist.last_name %></h4>
      <p><label for="bio"> Bio: </label> <%= @artist.bio %></p>
    </div>
  </div>
</div>

<div class="row">
<!-- List of songs -->
  <div class="col-md-10 col-md-2">
    <h3 class="page-header">List of Songs</h3>
    <% if notice.present? %>
    <div class="alert alert-info" role="alert">
      <%= notice %>
    </div>
    <% end %>

    <%= render partial: "/songs/form", locals: { song: @song } %>
    <hr/>

    <% if @artist.songs.any? %>
    <table class="table table-striped" id="songList">
      <%= render @artist.songs.order_by_title %>
    </table>
    <% else %>
      <p>There are no songs for this artist.</p>
    <% end %>
    <div class="footer">
      <a href="#" id="delete">[DELETE]</a>
    </div>
  </div>
</div>
  <hr/>

<p><%= link_to "+ ADD NEW SONG", new_song_path, class: "btn btn-info" %>
<%= link_to "EDIT ARTIST", edit_artist_path(@artist.id), class: "btn btn-warning"%>
<%= link_to "DELETE ARTIST", artist_path(@artist.id), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure?" } %></p>
<%= link_to "BACK", artists_path, class: "btn btn-default"%></p>
