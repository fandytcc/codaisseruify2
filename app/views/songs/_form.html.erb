<%= form_for @song do |f| %>
  <%= render 'shared/validation_errors' %>

  <div class="form-group">
    <label for="title">Song Title</label>
    <%= f.text_field :title, placeholder: "Song Title", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :artist_id %>
    <%= f.collection_select(:artist_id, Artist.all, :id, :first_name) %>
  </div>

  <div class="actions">
    <%= f.submit "CREATE", class: "btn btn-default" %>
  </div>
<% end %>
